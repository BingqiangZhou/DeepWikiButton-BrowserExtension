{
  "manifest_version": 3,
  "name": "DeepWiki Button",
  "version": "1.0.0",
  "description": "Quickly navigate from GitHub to DeepWiki with a floating button",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
